version: '3'
services:

  backend:
    build: ./backend
    image: backend-i
    container_name: backend-c
    # volumes:
    #   - ./backend/src:/app/src
    ports:
      - "3000:3000"
      - "8080:8080"
    restart: always

  frontend:
    build: ./frontend
    image: frontend-i
    container_name: frontend-c
    # volumes:
    #   - ./frontend/dist:/usr/share/nginx/html
    ports:
      - "8000:80"
    restart: always
    # stdin_open: true
    # tty: true
    depends_on:
      - backend

  nginx:
    image: nginx
    container_name: nginx-c
    ports:
      - "80:80"
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf
    depends_on:
      - frontend


      ------

      worker_processes 1;

events {
    worker_connections 1024;
}

http {
    # Default server block
    server {
        listen 80 default_server;
        server_name _;

        # Frontend application
        location / {
            # Redirect to the frontend using the container name and port
            proxy_pass http://frontend-c:8000;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }

        # Backend API
        location /api {
            # Proxy pass to the backend
            proxy_pass http://backend-c:3000;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
    }

    # Server block for ahmetproje.com.tr and www.ahmetproje.com.tr
    server {
        listen 80;
        server_name ahmetproje.com.tr www.ahmetproje.com.tr;

        # Frontend application
        location / {
            proxy_pass http://frontend-c:8000;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }

        # Backend API
        location /api {
            proxy_pass http://backend-c:3000;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
    }

    # Server block for devopscloud.us.to
    server {
        listen 80;
        server_name devopscloud.us.to;

        # Frontend application for devopscloud.us.to
        location / {
            proxy_pass http://frontend-c:8000;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
    }
}
